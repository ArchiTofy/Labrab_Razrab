@model Artem.Models.Report

@{
    ViewData["Title"] = "Создать отчет";
}

<h1>Создать новый отчет</h1>

<form asp-controller="Reports" asp-action="Create" method="post">
    <div class="form-group">
        <label for="OperatorFullName">ФИО оператора:</label>
        <input type="text" class="form-control" id="OperatorFullName" name="OperatorFullName" required>
    </div>
    <div class="form-group">
        <label for="Detail">Деталь:</label>
        <input type="text" class="form-control" id="Detail" name="Detail" required>
    </div>
    <div class="form-group">
        <label for="Operation">Операция:</label>
        <input type="number" class="form-control" id="Operation" name="Operation" required>
    </div>
    <div class="form-group">
        <label for="OperationType">Тип операции:</label>
        <select class="form-control" id="OperationType" name="OperationType" required>
            @foreach (var operationType in Enum.GetValues(typeof(Artem.Models.OperationType)))
            {
                <option value="@operationType">@operationType</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="LaborIntensityFact">Факт трудоемкости:</label>
        <input type="number" class="form-control" id="LaborIntensityFact" name="LaborIntensityFact" required>
    </div>
    <div class="form-group">
        <label for="Quantity">Количество:</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" required>
    </div>
    <button type="submit" class="btn btn-primary">Создать отчет</button>
</form>

<a asp-action="Index">Вернуться к списку</a>
